<h1 style='text-align: center;'>Cart Detail</h1>
  <table>
    <tr>
      <td> Title </td>
      <td> Quantity </td>
      <td> Price </td>
      <td> Modify Quantity</td>
      <td> Remove product</td>
    </tr>
    {{#each cart.products}}
      <tr class='product'>
        <td class='title'>{{this.product.title}} </td>
        <td> {{this.quantity}} </td>
        <td> $ {{this.product.price}} </td>
        <td>
          <a href="/{{../cart._id}}/addQuantity/{{this.product._id}}" > + </a>
          <span>&nbsp;&nbsp;&nbsp;&nbsp;</span>
          <a href="/{{../cart._id}}/removeQuantity/{{this.product._id}}"> - </a></td>
        <td><a href="/{{../cart._id}}/delete/{{this.product._id}}??_method=DELETE">X</a></td>
      </tr>
    {{/each}}
  </table>
  <div>
    <span>
        <h3 style="text-align: center;">Cart Total : $ {{total}}</h3>
    </span>
  </div>
  <div class="button-container">
    <button class="checkout"><a href="/cart/{{cart.id}}/checkout">
      Checkout
    </a></button>
    <button class="empty-cart"><a href="/{{cart.id}}/delete">
      Empty Cart
    </button></a>
<button class="goBack"><a href='/products'>Back</a></button>
</div>